@namespace Skclusive.Material.Docs

<FormControl
    Component="fieldset">
    <FormLabel
        Component="legend">
        labelPlacement
    </FormLabel>
    <FormGroup
        aria-label="position"
        Row>
        <FormControlLabel
            Label="Top"
            Placement="@Placement.Top">
            <ControlContent
                Context="Control">
                <Checkbox
                    Color="@Color.Primary"/>
            </ControlContent>
        </FormControlLabel>
        <FormControlLabel
            Label="Start"
            Placement="@Placement.Start">
            <ControlContent
                Context="Control">
                <Checkbox
                    Color="@Color.Primary"/>
            </ControlContent>
        </FormControlLabel>
        <FormControlLabel
            Label="Bottom"
            Placement="@Placement.Bottom">
            <ControlContent
                Context="Control">
                <Checkbox
                    Color="@Color.Primary"/>
            </ControlContent>
        </FormControlLabel>
        <FormControlLabel
            Label="End"
            Placement="@Placement.End">
            <ControlContent
                Context="Control">
                <Checkbox
                    Color="@Color.Primary"/>
            </ControlContent>
        </FormControlLabel>
    </FormGroup>
</FormControl>