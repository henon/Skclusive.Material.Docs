<div style="margin: auto; display: flex; outline: 0; padding: 20px;
            border-radius: 4px; justify-content: center; background-color: #f5f5f5;">
  <List Style="width: 100%; max-width: 360px; background-color: #fff;">
    <SubheaderContent>
      <ListSubheader>
        Settings
      </ListSubheader>
    </SubheaderContent>
    <ChildContent>
        <ListItem>
          <ListItemIcon>
              <WifiIcon />
          </ListItemIcon>
          <ListItemText Id="switch-list-label-wifi" Primary="Wi-Fi" />
          <ListItemSecondaryAction>
              <Switch Edge="@Edge.End" Checked="@(IsChecked(1))" OnChange="@((_) => ToggleChecked(1))" InputProps="@(new Dictionary<string, object>() { {"aria-labelledby", "switch-list-label-wifi" }})" />
          </ListItemSecondaryAction>
        </ListItem>
        <ListItem>
            <ListItemIcon>
                <BluetoothIcon />
            </ListItemIcon>
            <ListItemText Id="switch-list-label-bluetooth" Primary="Bluetooth" />
            <ListItemSecondaryAction>
                <Switch Edge="@Edge.End" Checked="@(IsChecked(2))" OnChange="@((_) => ToggleChecked(2))" InputProps="@(new Dictionary<string, object>() { {"aria-labelledby", "switch-list-label-bluetooth" }})" />
            </ListItemSecondaryAction>
        </ListItem>
    </ChildContent>
  </List>
</div>