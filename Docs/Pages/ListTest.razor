@page "/list"

<div style="margin: auto; display: flex; outline: 0; padding: 20px;
            border-radius: 4px; justify-content: center; background-color: #f5f5f5;">
  <List Component="nav" aria-label="main mailbox folders"
    Style="width: 100%; max-width: 360px; background-color: #fff;">
    <SubheaderContent>
      <ListSubheader Component="div" Id="nested-list-subheader">
        Nested List Items
      </ListSubheader>
    </SubheaderContent>
    <ChildContent>
      <ListItem Button Selected="@(SelectedIndex == 1)" OnClick="@((_) => OnSelect(1))">
        <ListItemIcon>
          <SendIcon />
        </ListItemIcon>
        <ListItemText Primary="Sent mail" Secondary="Jan 9, 2014" />
      </ListItem>
      <ListItem Button Selected="@(SelectedIndex == 2)" OnClick="@((_) => OnSelect(2))">
        <ListItemIcon>
          <DraftsIcon />
        </ListItemIcon>
        <ListItemText Primary="Drafts" Secondary="Jan 29, 2014" />
      </ListItem>
      <ListItem Button Selected="@(SelectedIndex == 3)" OnClick="@((_) => OnSelect(3))">
        <ListItemIcon>
          <InboxIcon />
        </ListItemIcon>
        <ListItemText Primary="Inbox" Secondary="July 20, 2014" />
        @if (Open)
        {
        <ExpandLessIcon />
        } else
        {
        <ExpandMoreIcon />
        }
      </ListItem>

      @if (Open)
      {
      <List Component="div" DisablePadding>
        <ListItem Button Style="padding-left: 32px" Selected="@(SelectedIndex == 4)"
          OnClick="@((_) => OnSelect(4))">
          <ListItemIcon>
            <StarBorderIcon />
          </ListItemIcon>
          <ListItemText Primary="Starred" Secondary="August 8, 2014" />
        </ListItem>
      </List>
      }
    </ChildContent>
  </List>
</div>

