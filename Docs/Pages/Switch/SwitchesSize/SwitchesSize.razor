@namespace Skclusive.Material.Docs

<FormGroup>
    <FormControlLabel
        Label="Small">
        <Switch
            Size="@Size.Small"
            Checked="@Checked"
            OnChange="@ToggleChecked" />
    </FormControlLabel>
    <FormControlLabel
        Label="Normal">
        <Switch
            Checked="@Checked"
            OnChange="@ToggleChecked" />
    </FormControlLabel>
</FormGroup>

@code
{
    private bool Checked { set; get; } = true;

    private void ToggleChecked(EventArgs args)
    {
        Checked = !Checked;

        StateHasChanged();
    }
}