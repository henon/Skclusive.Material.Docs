@namespace Skclusive.Material.Docs
@inherits TitleComponent

<Component
    Tag="@Component"
    Style="@_Style"
    Class="@_Class">
    @if (Level < 4)
    {
        <Anchor
            Style="@_AnchorStyle"
            Class="@_AnchorClass"
            LinkStyle="@_AnchorLinkStyle"
            LinkClass="@_AnchorLinkClass"
            Text="@Text" />
    } else
    {
        @Text
    }
</Component>