@inherits StyleComponentBase

<MaterialStyles />
<PrismStyles />
<MarkdownStyles />

<style data-name="Site">

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    html {
        height: 100%;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    body {
        background-color: var(--theme-palette-main-background-default, #fff) !important;
        height: 100%;
    }

    a {
        text-decoration: none;
    }

    @media (prefers-color-scheme: light) {

        :root {
            --app-layout-backward: #f5f5f5;
            --app-layout-forward: #fff;
        }
    }

    @media (prefers-color-scheme: dark) {

        :root {
            --app-layout-backward: #333;
            --app-layout-forward: #424242;
        }
    }

</style>
