@namespace Skclusive.Material.Docs.App.View

<Paper
    Square
    Style="flex-grow: 1; max-width: 500px;">
    <Tabs
        Value="@Value"
        OnChange="@HandleChange"
        Variant="@TabsVariant.FullWidth"
        IndicatorColor="@Color.Secondary"
        TextColor="@Color.Secondary"
        aria-label="icon label tabs example">
        <Tab
            Label="RECENTS">
            <IconContent>
                <PhoneIcon />
            </IconContent>
        </Tab>
        <Tab
            Label="FAVORITES">
            <IconContent>
                <FavoriteIcon />
            </IconContent>
        </Tab>
        <Tab
            Label="NEARBY">
            <IconContent>
                <PersonPinIcon />
            </IconContent>
        </Tab>
    </Tabs>
</Paper>

@code
{
    private object Value { set; get; } = 0;

    private void HandleChange(object value)
    {
        Value = value;

        StateHasChanged();
    }
}