    Style="@_Style"
    Text="@(@"
```html
<List
    Class=""demo-list-root"">
    @foreach(var item in Items)
    {
        <ListItem
            @key=""item.Index""
            Button
            Dense=""true""
            OnClick=""@((_) => {
                item.Checked = !item.Checked;
            })"">
            <ChildContent>
                <ListItemIcon>
                    <Checkbox
                        Edge=""@Edge.Start""
                        Checked=""@item.Checked""
                        DisableRipple
                        TabIndex=""-1""
                        InputProps=""@(new Dictionary<string, object>{{ ""aria-label"", $""checkbox-list-label-{item.Index}"" }})"" />
                </ListItemIcon>
                <ListItemText
                    Id=""@($""checkbox-list-label-{item.Index}"")""
                    Primary=""@($""Line item {item.Index + 1}"")"" />
            </ChildContent>
            <SecondaryAction>
                <ListItemSecondaryAction>
                    <IconButton
                        Edge=""@IconButtonEdge.End""
                        aria-label=""comments""
                        Context=""IconButton"">
                        <CommentIcon />
                    </IconButton>
                </ListItemSecondaryAction>
            </SecondaryAction>
        </ListItem>
    }
</List>
```

