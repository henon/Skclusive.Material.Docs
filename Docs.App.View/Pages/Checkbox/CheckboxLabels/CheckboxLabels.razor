@namespace Skclusive.Material.Docs.App.View

<style>
    .demo-green-checkbox {
        color: #66bb6a;
    }
    .demo-green-checkbox-checked {
        color: #43a047;
    }
</style>

<FormGroup
    Row>
    <FormControlLabel
        Label="Secondary">
        <Checkbox
            Checked="@CheckedA"
            Value="CheckedA"
            OnChange="@OnCheckedAChanged" />
    </FormControlLabel>
    <FormControlLabel
        Label="Primary">
        <Checkbox
            Checked="@CheckedB"
            OnChange="@OnCheckedBChanged"
            Value="CheckedB"
            Color="@Color.Primary" />
    </FormControlLabel>
    <FormControlLabel
        Label="Uncontrolled">
        <Checkbox
            Value="CheckedC" />
    </FormControlLabel>
    <FormControlLabel
        Disabled="true"
        Label="Disabled">
        <Checkbox
            Disabled="true"
            Value="CheckedD" />
    </FormControlLabel>
    <FormControlLabel
        Disabled="true"
        Label="Disabled">
        <Checkbox
            Checked="true"
            Disabled="true"
            Value="CheckedE" />
    </FormControlLabel>
    <FormControlLabel
        Label="Indeterminate">
        <Checkbox
            Checked="@CheckedF"
            OnChange="@OnCheckedFChanged"
            Value="CheckedF"
            Indeterminate />
    </FormControlLabel>
    <FormControlLabel
        Label="Custom color">
        <Checkbox
            Color="@Color.Default"
            Class="demo-green-checkbox"
            CheckedClass="demo-green-checkbox-checked"
            Checked="@CheckedG"
            OnChange="@OnCheckedGChanged"
            Value="CheckedG" />
    </FormControlLabel>
    <FormControlLabel
        Label="Custom icon">
        <Checkbox
            Value="CheckedH">
            <Icon>
                <FavoriteIcon />
            </Icon>
            <CheckedIcon>
                <FavoriteBorderIcon />
            </CheckedIcon>
        </Checkbox>
    </FormControlLabel>
    <FormControlLabel
        Label="Custom size">
        <Checkbox
            Value="CheckedI">
            <Icon>
                <CheckBoxOutlineBlankIcon Style="font-size: 1.25rem;" />
            </Icon>
            <CheckedIcon>
                <CheckBoxIcon Style="font-size: 1.25rem;" />
            </CheckedIcon>
        </Checkbox>
    </FormControlLabel>
</FormGroup>

@code
{
    private bool CheckedA { set; get; } = true;

    private bool CheckedB { set; get; } = true;

    private bool CheckedF { set; get; } = true;

    private bool CheckedG { set; get; } = true;

    private void OnCheckedAChanged(EventArgs args)
    {
        CheckedA = !CheckedA;

        StateHasChanged();
    }

    private void OnCheckedBChanged(EventArgs args)
    {
        CheckedB = !CheckedB;

        StateHasChanged();
    }

    private void OnCheckedFChanged(EventArgs args)
    {
        CheckedF = !CheckedF;

        StateHasChanged();
    }

    private void OnCheckedGChanged(EventArgs args)
    {
        CheckedG = !CheckedG;

        StateHasChanged();
    }
}