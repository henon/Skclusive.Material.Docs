@namespace Skclusive.Material.Docs.App.View

<AppBar
    Position="@AppBarPosition.Fixed"
    Class="@RootClass"
    Color="@Color.Custom">
    <Toolbar>
        <IconButton
            Color="@Color.Inherit"
            aria-label="open drawer"
            OnClick="@OnSidebarOpen"
            Edge="@IconButtonEdge.Start"
            Style="@IconStyle">
            <MenuIcon />
        </IconButton>
        <Typography
            Style="flex-grow: 1;"
            Variant="@TypographyVariant.H6"
            NoWrap>
            Skclusive Material Components
        </Typography>
        <IconButton
            Color="@Color.Inherit"
            OnClick="@OnThemeChange"
            aria-label="Toggle light/dark theme"
            title="Toggle light/dark theme">
            @if (IsLight)
            {
                <Brightness4Icon />
            } else
            {
                <Brightness7Icon />
            }
        </IconButton>
    </Toolbar>
</AppBar>

@code
{
    [Parameter]
    public bool Open { set; get; }

    [Parameter]
    public Action OnThemeChange { set; get; }

    [Parameter]
    public Action OnSidebarOpen { set; get; }

    [Parameter]
    public bool IsLight { set; get; }

    private string IconStyle => "margin-right: 16px;" + (Open ? " display: none;" : "");

    private string RootClass => "top-bar" + (Open ? " top-bar-shift" : "");
}